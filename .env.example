# USC Story - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains secrets!

# ==============================================
# Auth0 Authentication
# ==============================================
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# ==============================================
# Xano Backend API
# ==============================================
XANO_API_URL=https://your-workspace.xano.io/api:v1
XANO_API_KEY=your-xano-api-key
XANO_INSTANCE_NAME=your-instance-name

# ==============================================
# Uploadcare File Uploads
# ==============================================
UPLOADCARE_PUBLIC_KEY=your-uploadcare-public-key
UPLOADCARE_SECRET_KEY=your-uploadcare-secret-key

# ==============================================
# Stripe Payments
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ==============================================
# Plaid (Optional - Financial Data)
# ==============================================
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# ==============================================
# Permit.io (Optional - Authorization)
# ==============================================
PERMIT_IO_API_KEY=your-permit-io-api-key
PERMIT_IO_PDP_URL=https://cloudpdp.api.permit.io

# ==============================================
# Bunny.net CDN (Optional)
# ==============================================
BUNNY_STORAGE_API_KEY=your-bunny-storage-key
BUNNY_CDN_URL=https://your-cdn.b-cdn.net

# ==============================================
# SendGrid Email
# ==============================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=USC Story

# ==============================================
# App URLs (for email links)
# ==============================================
APP_URL=https://yourdomain.com

# ==============================================
# Webflow CMS Sync
# ==============================================
WEBFLOW_API_TOKEN=your-webflow-api-token
WEBFLOW_SITE_ID=your-webflow-site-id

# Collection IDs (get from Webflow API or dashboard)
WEBFLOW_USERS_COLLECTION_ID=your-users-collection-id
WEBFLOW_TAGS_COLLECTION_ID=your-tags-collection-id
WEBFLOW_PROFILES_COLLECTION_ID=your-profiles-collection-id
WEBFLOW_STORIES_COLLECTION_ID=your-stories-collection-id
WEBFLOW_SUPPORT_CARDS_COLLECTION_ID=your-support-cards-collection-id
WEBFLOW_INSTRUCTORS_COLLECTION_ID=your-instructors-collection-id
WEBFLOW_CLASSES_COLLECTION_ID=your-classes-collection-id
WEBFLOW_PRIVACY_SETTINGS_COLLECTION_ID=your-privacy-settings-collection-id

# ==============================================
# Development Settings
# ==============================================
NODE_ENV=development
PORT=8080
